{
  "name": "modernmahal",
  "version": "1.0.0",
  "description": "Backend for cross-platform mobile application with authentication APIs (Node.js, Express, PostgreSQL)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "test": "jest",
    "migrate": "cross-env DOTENV_CONFIG_PATH=./backend/.env node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate.js up --migrations-dir ./backend/migrations",
    "migrate:down": "cross-env DOTENV_CONFIG_PATH=./backend/.env node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate.js down --migrations-dir ./backend/migrations",
    "migrate:make": "cross-env DOTENV_CONFIG_PATH=./backend/.env node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate.js create --migrations-dir ./backend/migrations",
    "postdeploy": "npm run migrate"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "authentication",
    "mobile-app-backend",
    "oauth",
    "jwt"
  ],
  "author": "Nikhil Kumar Patra",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "otp-generator": "^4.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "twilio": "^5.7.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
